<Window x:Class="WPF_Kuznetsov_PR14.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Kuznetsov_PR14"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Aqua">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="262*"/>
            <ColumnDefinition Width="209*"/>
            <ColumnDefinition Width="329*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="77*"/>
            <RowDefinition Height="305*"/>
            <RowDefinition Height="52*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Image Source="Image/kaltinka.png" Width="80"/>
        </StackPanel>
        <TextBox Text="Грили" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="50" FontWeight="Bold" Background="Aqua" Grid.Column="1" />
        <Frame x:Name="myMain" NavigationUIVisibility="Hidden" Grid.Row="1" Grid.ColumnSpan="3" Background="White"/>
    </Grid>
</Window>
